<!--Função Atividade 8-->
<p id="refeição1">  </p>
<script>
var refeição;
var hora = new Date().getHours();

if (hora < 9 ){
    refeição= "hora do café da manhã!";
}else if (hora >9 && hora <13 ){
    refeição= "hora do almoço!";
}else if (hora >13 && hora <18){
    refeição= "hora do café da tarde!";
}else if (hora >18 && hora <24){
    refeição= "hora da janta!";
}
 document.getElementById("refeição1").innerHTML=refeição;
</script>

